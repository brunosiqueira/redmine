<h2><%=I18n.t "title_edit_#{@type.downcase}"%></h2>

<div id="authors">
  <div class="box">
    <%= render :partial=>"/authors/authors" %>
  </div>
</div>
<% form_for(:bibliography,@bibliography,:url=>{:action=>"update",:id=>@bibliography,:project_id=>@project,:type=>@type},:method=>:put, :builder => TabularFormBuilder,:html=>{:class=>"tabular"}) do |f| %>
  <div class="box">
    <%= f.error_messages %>

    <%=render :partial=>"/bibliographies/new_#{@type.downcase}",:locals=>{:f=>f}%>
  </div>
  <%= f.submit l(:button_update) %>
<% end %>

<%= link_to l(:button_show), :action=>:show,:id=>@bibliography,:project_id=>@project %> |
<%= link_to l(:button_back), :action=>:index,:project_id=>@project %>

<% content_for :header_tags do %>
  <%= stylesheet_link_tag 'bibliography', :plugin => 'redmine_bibliography' %>
<% end %>